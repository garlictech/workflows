{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "strictNullChecks": false,
        "lib": ["dom", "es6"],
        "types": ["jasmine", "node", "source-map", "uglify-js", "webpack"]
    },
    "exclude": [
        "node_modules",
        "compiled",
        "artifatcs",
        "e2e/**/*.ts",
        "src/server.ts",
        "src/server.aot.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true,
        "cacheDirectory": "/app/artifacts/.awcache"
    },
    "compileOnSave": false,
    "buildOnSave": false
}