{
    "name": "workflows-angular",
    "version": "1.0.0",
    "description": "Angular and Webpack 2 Starter",
    "scripts": {
        "start": "make start",
        "start:poll": "make start-poll",
        "start:aot": "make start-aot",
        "start:prod": "make start-prod",
        "start:universal:debug": "make start-universal-debug",
        "build:prod": "npm run build:prod:debug --prod $@",
        "build:prod:debug": "ng build --configuration=$PROJECT_CONFIG $@",
        "build:universal": "ng run website:server && webpack --config webpack.server.config.js --colors",
        "build:prod:stat": "ng build --configuration=$PROJECT_CONFIG --prod --stats-json",
        "bundle-report": "webpack-bundle-analyzer -h 0.0.0.0 artifacts/dist/browser/stats.json",
        "doc:build": "compodoc src -d ./artifacts/docs -p src/tsconfig.json --includes src/docs",
        "doc:serve": "compodoc src -s -r 8092 -d ./artifacts/docs -p src/tsconfig.json --includes src/docs",
        "doc:buildandserve": "compodoc src -s -r 8092 -d ./artifacts/docs -p src/tsconfig.json --includes src/docs"
    },
    "dependencies": {
        "express": "^4.15.2",
        "@compodoc/compodoc": "^1.0.0",
        "ts-loader": "^5.0.0",
        "webpack-cli": "^3.1.0",
        "url-loader": "^1.0.1",
        "webpack-bundle-analyzer": "^3.0.2",
        "webpack": "~4.27.0"
    },
    "devDependencies": {

    }
}
