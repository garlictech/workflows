{
  "rulesDirectory": [
    "codelyzer",
    "tslint-eslint-rules",
    "tslint-plugin-prettier",
    "tslint-misc-rules",
    "tslint-jsdoc-rules"
  ],
  "extends": [
    "tslint-eslint-rules",
    "tslint:recommended",
    "tslint-sonarts",
    "tslint-consistent-codestyle",
    "tslint-angular",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": [true, ".prettierrc"],
    "interface-name": false,
    "jsdoc-require": [false],

    "i18n": false,
    "no-unused-variable": true
  },
  "linterOptions": {
    "files": ["src/**/*.ts"],
    "exclude": ["artifacts", "node_modules", "cypress", "docker", "e2e", "src/assets", "src/**/jest*"]
  }
}
