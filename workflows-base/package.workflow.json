{
    "scripts": {
        "rimraf": "rimraf",
        "unittest": "export NODE_OPTIONS=--max_old_space_size=4096 && jest -c src/jest-config.js --coverage $@ --forceExit --detectOpenHandles",
        "unittest:watch": "jest -c src/jest-config.js --watch",
        "unittest:ci": "export NODE_OPTIONS=--max_old_space_size=4096 && jest -c src/jest-config.js --coverage $@ --forceExit --detectOpenHandles --ci --runInBand",
        "clean": "npm run rimraf -- artifacts/* artifacts/.awcache",
        "semantic-release": "scripts/semantic-release",
        "commit": "scripts/commit.sh",
        "travis": "scripts/travis.sh $@",
        "prettier": "prettier --config ./.prettierrc --write \"src/**/*{.ts,.js,.json,.css,.scss}\"",
        "prettier:check": "prettier --config ./.prettierrc --list-different \"src/**/*{.ts,.js,.json,.css,.scss}\"",
        "lint": "npm run prettier:check && scripts/lint.sh",
        "lint:fix": "npm run prettier && scripts/lint.sh --fix",
        "format:fix": "cd /app/project && pretty-quick --staged"
    },
    "dependencies": {
        "commitizen": "~3.0.5",
        "cz-conventional-changelog": "^2.0.0",
        "typedoc": "^0.11.1",
        "semantic-release": "4.3.5"
    },
    "devDependencies": {}
}