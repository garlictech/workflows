{
    "compilerOptions": {
        "declaration": false,
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noEmit": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "lib": ["es6", "dom"],
        "outDir": "dist/lib",
        "typeRoots": ["node_modules/@types"],
        "types": ["hammerjs", "node"],
        "baseUrl": "./src",
        "paths": {
            "*": ["*"]
        }
    },
    "exclude": ["node_modules", "dist", "./**/*spec.ts", "./**/test/*", "./**/*.e2e.ts", "dev-site"],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "angularCompilerOptions": {
        "genDir": "./compiled",
        "skipMetadataEmit": true
    },
    "compileOnSave": false,
    "buildOnSave": false
}