{
  "compilerOptions": {
    "target": "es5",
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": ["es6", "es2015", "es2016", "es2017"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "baseUrl": "../../project/src",
    "outDir": "../../artifacts",
    "paths": {
      "*": ["*"]
    }
  },
  "exclude": ["artifacts"],
  "include": ["node_modules/@bit", "project/src"]
}
