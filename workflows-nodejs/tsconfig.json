{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": ["dom", "es6", "es2015", "es2016", "es2017"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": "./project/src",
    "paths": {
      "*": [
        "*"
      ]
    },
  },
  "exclude": [
    "artifacts"
  ],
  "include": [
    "node_modules/@bit",
    "project/src"
  ]
}