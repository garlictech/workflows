{
    "dependencies": {
        "typedoc": "^0.14.0"
    },
    "scripts": {
        "typedoc": "typedoc /app/project/src --out /app/doc",
        "compile": "gulp compile",
        "build": "run-s clean compile",
        "start": "gulp",
        "prettier": "prettier --config ./.prettierrc --write \"project/src/**/*{.ts,.js,.json}\"",
        "prettier:check": "prettier --config ./.prettierrc --list-different \"project/src/**/*{.ts,.js,.json}\"",
        "unittest": "export NODE_OPTIONS=--max_old_space_size=4096 && jest -c project/jest.config.unittest.js--forceExit --detectOpenHandles",
        "unittest:watch": "jest -c project/jest.config.unittest.js --watch",
        "unittest:ci": "export NODE_OPTIONS=--max_old_space_size=4096 && jest -c project/jest.config.unittest.js--forceExit --detectOpenHandles --ci --runInBand",
        "alltest": "export NODE_OPTIONS=--max_old_space_size=4096 && jest -c project/jest.config.all.js --coverage $@ --forceExit --detectOpenHandles",
        "alltest:ci": "export NODE_OPTIONS=--max_old_space_size=4096 && jest -c src/jest.config.all.js --coverage $@ --forceExit --detectOpenHandles --ci --runInBand && chmod -R 777 /app/artifacts",
        "format:fix": "cd /app/project && pretty-quick --staged"
    }
}